{
  "name": "express-crud-todo",
  "version": "1.1.0",
  "description": "a todo api",
  "main": "app.js",
  "scripts": {
    "release": "standard-version",
    "start": "node app.js",
    "dev": "node --watch app.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "openapi:lint": "redocly lint docs/swagger.yml",
    "test": "NODE_ENV=test jest --coverage"
  },
  "dependencies": {
    "@sentry/node": "^10.40.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "sql.js": "^1.12.0",
    "standard-version": "^9.5.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@redocly/cli": "^2.19.2",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  },
  "overrides": {
    "glob": "^11.0.0",
    "minimatch": "^10.2.1",
    "braces": "^3.0.3",
    "js-yaml": "^4.1.0"
  },
  "jest": {
    "coverageProvider": "v8",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "routes/*.js",
      "utils/*.js",
      "app.js",
      "!**/node_modules/**"
    ]
  }
}
